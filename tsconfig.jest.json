{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "types": ["jest", "node"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["app", "**/*.ts", "**/*.tsx"]
}
